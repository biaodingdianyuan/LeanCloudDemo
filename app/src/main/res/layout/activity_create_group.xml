<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/group_toolbar"
        android:gravity="center"
        android:background="@color/avoscloud_blue"
        android:layout_height="wrap_content"
        >
        <RelativeLayout

            android:layout_width="match_parent"
            android:orientation="horizontal"

            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <TextView
                android:layout_width="305dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="25dp"
                android:text="创建群组"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/back_group"
                android:id="@+id/textView4" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/back_creategroup"
                android:src="@drawable/avoscloud_search_actionbar_back"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />



        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/group_name"
        android:padding="5dp"
        android:layout_margin="8dp"
        android:hint="请输入群组的名字"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择群组成员（最少选一个）："/>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/avoscloud_feedback_back_background"
        android:layout_margin="2dp"
        android:layout_height="wrap_content">
        <ListView
        android:layout_width="match_parent"
            android:layout_margin="2dp"
            android:background="@color/avoscloud_feedback_white"
        android:layout_height="wrap_content"
        android:id="@+id/add_friend">

    </ListView>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/create"
        android:text="创建"/>



</LinearLayout>